#include<iostream>
using namespace std;

int main()
{
     
     int n=0;
    cout<<">>> Enter Range N : ";
    cin>>n;
    
    int i=1;
    cout<<">>> EVEN NUMBERS : ";
    while(1)
    {
        
        if(i%2==0)
        cout<<i<<" ";
        
        if(i==n)
        break;
        
        if(n>0)
        i++;
        
        if(n<=0)
        i--;
    }
    cout<<endl;
    system("pause");
    return 0;
}
